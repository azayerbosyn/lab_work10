@using Microsoft.AspNetCore.Razor.Language

<div class="text-center">
    <h3 class="display-4">Hello Student.</h3>
    <h6 class="display-8">Here you can get your Id number in our university.</h6>


</div>


<div class="form-group">
    <form method="post" action="~/Hello/Index">
        <div class="form-group">
            <label for="exampleInputName">Name</label>
            <input type="text" name="name" />
        </div>

        <div class="form-group">
            <label for="exampleInputDate">Date of birth(in "dd.mm.yyyy" format)</label>
            <input type="text" name="data" />
        </div>

        <div class="form-group">
            <label for="exampleInputGroup">Group number(only:1,2,3)</label>
            <input type="text" name="group" />
        </div>
        <!--
        <div class="form-group">
            <label for="exampleInputFaculty">Faculty</label>
            <input type="text" name="faculty" />
        </div>
        -->

        <button type="submit" class="btn btn-primary">Submit and get my ID number</button>
        <br>
        <hr>

        <br>
    </form>

</div>

<h3>Your ID is :@ViewBag.Message</h3>

<br>
<br>
<div class="form-group">
    <h5>Part2</h5>
    <form method="post" action="~/Hello/ShowMessage">
        <div class="form-group">
            <label for="exampleInputId">Enter your ID </label>
            <input type="text" name="ids" />
        </div>

        <button type="submit" class="btn btn-primary">Search info by ID number</button>
    </form>
<br>
<hr>
<br>
        
    
    
</div>